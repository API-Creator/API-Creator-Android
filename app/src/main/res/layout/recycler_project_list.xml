<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#fff">

    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <!-- Bottom View Start-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/bottom_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!-- Admin View -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/projectAdminView"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:visibility="visible">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/projectEditBtn"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/orange">

                    <ImageView
                        android:id="@+id/projectEditImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/projectDeleteBtn"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/projectDeleteImg"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </android.support.constraint.ConstraintLayout>

            <!-- Guest View -->
            <android.support.constraint.ConstraintLayout
                android:id="@+id/projectInfoBtn"
                android:layout_width="64dp"
                android:layout_height="match_parent"
                android:background="@color/skyblue"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/projectInfoImg"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.constraint.ConstraintLayout>
        <!-- Bottom View End-->

        <!-- Surface View Start -->
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <TextView
                android:id="@+id/projectTitle"
                android:layout_width="300dp"
                android:layout_height="25dp"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:text="API_Creator"
                android:textColor="#1c1c1c"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/projectPM"
                android:layout_width="300dp"
                android:layout_height="18dp"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:text="API_Creator"
                android:textColor="#7c7c7c"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.538" />
        </android.support.constraint.ConstraintLayout>
        <!-- Surface View End -->
    </com.daimajia.swipe.SwipeLayout>


</android.support.constraint.ConstraintLayout>